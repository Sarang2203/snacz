<!-- res/layout/nav_bar.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/bottomImage"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-31dp"
        android:src="@drawable/nav_bar" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="369dp"
        android:layout_height="42dp"
        android:layout_alignTop="@+id/bottomImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="-8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bottomImage1"
            android:layout_width="47dp"
            android:layout_height="42dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="40dp"
            android:src="@drawable/offer" />

        <ImageView
            android:id="@+id/bottomImage2"
            android:layout_width="47dp"
            android:layout_height="42dp"
            android:src="@drawable/cart" />

        <ImageView
            android:id="@+id/bottomImage3"
            android:layout_width="47dp"
            android:layout_height="42dp"
            android:layout_marginStart="60dp"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/bottomImage4"
            android:layout_width="38dp"
            android:layout_height="36dp"
            android:layout_marginStart="36dp"
            android:src="@drawable/profile" />

    </LinearLayout>

    <ImageView
        android:id="@+id/bottomImage5"
        android:layout_width="55dp"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="153dp"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="45dp"
        android:src="@drawable/search" />
</RelativeLayout>
